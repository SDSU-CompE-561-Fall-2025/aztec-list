{
  // Format on save for all languages
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Use LF line endings (Unix-style) for consistency across platforms
  "files.eol": "\n",

  // Markdown needs trailing spaces for line breaks
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // Frontend: Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Python: Ruff
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.analysis.typeCheckingMode": "basic",

  // Tailwind CSS v4
  "css.validate": false,
  "tailwindCSS.experimental.configFile": "frontend/tailwind.config.ts",

  // Hide build artifacts
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true
  }
}
